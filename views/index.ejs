<% include layouts/header %>
<div class="ui centered container top" >
    <h1 class="ui centered header">Ajouts r√©cents</h1>
    <div class="ui four stackable cards visible">
            <% annonces.map(annonce => { %>
                <div class="ui link card" href="/annonces/<%=annonce.id %>">
                    <div class="content">
                        <a href="/annonces/<%=annonce.id %>">
                            <h5 class="ui header"><%= annonce.author.username %></h5>
                        </a> 
                          <span class="meta"> <%= annonce.author.ville %></span>
                    </div>
                    <a href="/annonces/<%=annonce.id %>">
                        <img class="ui image" src=".<%= annonce.image %>"/>
                    </a>
                    <div class="content">
                        <div class="">
                            <p> <%= annonce.contenu.substring(0, 150) %>...</p>
                        </div>
                    </div>
                    <div class="extra content">
                        <span><%= annonce.date.toDateString() %></span>
                    </div>
                </div>
            <%})%>
    </div>
</div>
<% include layouts/footer %>