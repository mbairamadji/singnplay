    <h1 class="ui centered header">Ajouts r√©cents</h1>
    <div class="ui four stackable cards visible">
            <% annonces.map(annonce => { %>
                <div class="ui card">
                    <a href="/annonces/<%=annonce.id %>"><img class="ui  image" src="<%= annonce.image %>"/></a>
                    <div class="content">
